<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Inscription - Blog santé du Dr Jean Dupont{% endblock %}</title>

    {# SEO #}
    {% block description %}{% endblock %}
    {% block keywords %}{% endblock %}
    <meta name="robots" content="index, follow">
    <meta name="author" content="enuossian">
    <meta name="publisher" content="enuossian">

    {# Favicon #}
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">

    {# Google Font #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    {# Font Awesome #}

    {# Webpack Encore #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <img src="/images/static/doctor-inscription.png" alt="inscrivez-vous sur le blog de Jean Dupont" class="img-fluid">
                </div>
                <div class="col-lg-6">
                <h1 class="text-control">Inscription</h1>

                        {{ form_start(registrationForm) }}
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="registration_form_firstName">Prénom <span class="text-danger">*</span></label>
                                        {{ form_widget(registrationForm.firstName, {'attr': {
                                            'class':'form-control', 
                                            'autofocus':'autofocus',
                                        }}) }}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="registration_form_lastName">Nom <span class="text-danger">*</span></label>
                                        {{ form_widget(registrationForm.lastName, {'attr': {
                                            'class':'form-control', 
                                            'autofocus':'autofocus',
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="registration_form_email">Email <span class="text-danger">*</span></label>
                                    {{ form_widget(registrationForm.email, {'attr': {
                                        'class':'form-control', 
                                        'autofocus':'autofocus',
                                    }}) }}
                            </div>
                            <div class="mb-3">
                                <label for="registration_form_password_first">Mot de passe <span class="text-danger">*</span></label>
                                    {{ form_widget(registrationForm.password.first, {'attr': {
                                        'class':'form-control', 
                                        'autofocus':'autofocus',
                                        'placeholder': 'Au moins 12 caractères',
                                    }}) }}
                                    <small>Au moins une lettre minuscule, majuscule, un chiffre et un caractère spécial.</small>
                            </div>
                            <div class="mb-3">
                                <label for="registration_form_password_second">Confirmation du mot de passe <span class="text-danger">*</span></label>
                                    {{ form_widget(registrationForm.password.second, {'attr': {
                                        'class':'form-control', 
                                        'autofocus':'autofocus',
                                        'placeholder': 'Au moins 12 caractères',
                                    }}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_widget(registrationForm.agreeTerms) }}
                                <label for="registration_form_agreeTerms">Lire et accepter <a href="">les conditions générales d'utilisation.</a></label>
                            </div>
                            <div>
                                <input type="submit" value="S'inscrire" class="btn btn-primary w-100 shadow">
                            </div>
                        {{ form_end(registrationForm) }}

                        <div class="d-flex flex-column justify-contencenter align-items-center my-">
                            <p>Vous avez déjà un <a href="">compte</a></p>
                            <p><a href="{{path('app_visitor_welcome')}}">Retour à l'accueil</a></p>
                        </div>
                </div>
            </div>
        </div>
    </main>
</body>



